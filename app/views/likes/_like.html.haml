- if Like.find_by(user_id: current_user.id, tweet_id: @tweet.id)
  = link_to "/tweets/#{@tweet.id}/likes/#{@tweet.likes.ids}", method: :delete, class: "element", remote: true do 
    = icon("fas", "heart", class: "like")
- else 
  = link_to "/tweets/#{@tweet.id}/likes", method: :post, class: "element", remote: true do 
    = icon("far", "heart", class: "unlike")
.count 
  = @tweet.likes.length
